<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context=".activities.CadastrarLocal">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_cadastrar_local"
        tools:context=".activities.CadastrarLocal"
        android:weightSum="1">


        <!--  Nome do local-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Nome"/>

        <!--Pega nome do local-->
        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="10dip"
            android:singleLine="true"
            android:id="@+id/nomeLocal"/>

        <!--  Descricao-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Descrição"/>

        <!--Pega descricao do local-->
        <EditText android:layout_width="fill_parent"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="10dip"
            android:width="100dp"
            android:singleLine="true"
            android:id="@+id/descricaoLocal"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:inputType="textMultiLine"
            android:layout_height="80dp"
            android:gravity="top"/>

        <!--  Endereco-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Endereço"/>

        <!--Pega endereco-->
        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="10dip"
            android:singleLine="true"
            android:id="@+id/enderecoLocal"
            android:layout_weight="0.11" />

        <!--  Horario de funcionamento-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Horario de Funcionamento"/>

        <!--Pega o horario de funcionamento-->
        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="10dip"
            android:singleLine="true"
            android:id="@+id/horarioLocal"/>

        <!--  contato-->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#372c24"
            android:text="Contato"/>

        <!--Pega contato-->
        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="10dip"
            android:singleLine="true"
            android:id="@+id/contatoLocal"/>

        <!-- Botão Salvar -->
        <Button
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Salvar"
            android:id="@+id/cadastrar_local_button_salvar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:onClick="OnClickButtonSalvar" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
