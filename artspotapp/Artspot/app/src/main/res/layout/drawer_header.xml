<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"

    android:theme="@style/ThemeOverlay.AppCompat.Dark" android:orientation="vertical"
    android:gravity="bottom"
    android:weightSum="1">

    <!-- Artspot Logo -->
    <ImageView android:layout_width="80dp" android:layout_height="80dp"
        android:id="@+id/drawer_header_logo"
        android:src="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp"/>

    <!-- Nome -->
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/drawer_header_username"
        android:text="username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignTop="@+id/drawer_header_logo"
        android:layout_toRightOf="@+id/drawer_header_logo"
        android:layout_toEndOf="@+id/drawer_header_logo"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:textSize="14dp" />

    <!-- Email -->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/drawer_header_email"
        android:text="useremail@android.com"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_toRightOf="@+id/drawer_header_logo"
        android:layout_below="@+id/drawer_header_username"
        android:layout_alignLeft="@+id/drawer_header_username"
        android:layout_alignStart="@+id/drawer_header_username"
        android:paddingLeft="5dp"
        android:textSize="12dp" />

</RelativeLayout>
