<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sicaray.artspot.SugestaoLocais">

    <ImageView
        android:id="@+id/item_sugestoes_locais_map_marker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/map_marker"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false" />

    <TextView
        android:id="@+id/item_sugestoes_locais_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="20sp"
        android:textColor="#e4222222"
        android:layout_above="@+id/item_sugestoes_locais_endereco"
        android:layout_toRightOf="@+id/item_sugestoes_locais_map_marker"
        android:layout_toEndOf="@+id/item_sugestoes_locais_map_marker" />

    <TextView
        android:id="@+id/item_sugestoes_locais_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereco"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/item_sugestoes_locais_map_marker"
        android:layout_toRightOf="@+id/item_sugestoes_locais_map_marker"
        android:layout_toEndOf="@+id/item_sugestoes_locais_map_marker"
        android:maxLines="1"/>

</RelativeLayout>