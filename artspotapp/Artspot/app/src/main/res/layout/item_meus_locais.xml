<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MeusLocais">

    <!-- Figura marker -->
    <ImageView
        android:id="@+id/item_meus_locais_map_marker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/map_marker" />

    <!-- Nome do Local -->
    <TextView
        android:id="@+id/item_meus_locais_nome"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="20sp"
        android:textColor="#e4222222"
        android:maxLines="1"
        android:maxLength="22"
        android:layout_above="@+id/item_meus_locais_endereco"
        android:layout_toRightOf="@+id/item_meus_locais_map_marker"
        android:layout_toEndOf="@+id/item_meus_locais_map_marker" />

    <!-- Endereço -->
    <TextView
        android:id="@+id/item_meus_locais_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereco"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/item_meus_locais_map_marker"
        android:layout_toRightOf="@+id/item_meus_locais_map_marker"
        android:layout_toEndOf="@+id/item_meus_locais_map_marker"
        android:maxLines="1"
        android:maxLength="28"/>

    <!-- Botão deletar local -->
    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:id="@+id/item_meus_locais_button_delete"
        android:background="@drawable/ic_lixeira"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"/>

</RelativeLayout>